<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Scene?>
<Scene fx:id="root" fx:controller="starwolf.Controller" xmlns:fx="http://javafx.com/fxml">
    <BorderPane fx:id="base">
        <top>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="New"/>
                    <MenuItem onAction="#fileOpenDialog" text="Open"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Close"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Save As"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Preferences"/>
                    <SeparatorMenuItem/>
                    <MenuItem onAction="#quit" text="Quit"/>
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Undo"/>
                    <MenuItem text="Redo"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Paste"/>
                    <MenuItem text="Delete"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Select All"/>
                    <MenuItem text="UnSelect All"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About"/>
                </Menu>
            </MenuBar>
        </top>
        <center>
            <Canvas fx:id="canvas"/>
        </center>
        <left>
            <VBox fx:id="optionsVBox">
                <TitledPane animated="false" text="Configure">
                    <VBox>
                        <Label text="Connect To Device"/>
                        <HBox alignment="CENTER">
                            <ChoiceBox>
                                <HBox.margin>
                                    <Insets bottom="10.0" top="10.0"/>
                                </HBox.margin>
                            </ChoiceBox>
                        </HBox>
                        <HBox alignment="TOP_RIGHT">
                            <Button text="Connect"/>
                            <Button text="Fetch Meta"/>
                        </HBox>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="30.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <Label text="Dimensions"/>
                            <Label text="  XOFS" GridPane.rowIndex="1"/>
                            <Label text="  YOFS" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            <Label text="  XSize" GridPane.rowIndex="3"/>
                            <Label text="  YSize" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                            <TextField GridPane.rowIndex="2"/>
                            <TextField GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                            <TextField GridPane.rowIndex="4"/>
                            <TextField GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                            <Button text="Set" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                            <Label text="Exposure" GridPane.rowIndex="6"/>
                            <Label text="  Seconds" GridPane.rowIndex="7"/>
                            <Label text="  Milliseconds" GridPane.columnIndex="2" GridPane.rowIndex="7"/>
                            <TextField GridPane.rowIndex="8"/>
                            <TextField GridPane.columnIndex="2" GridPane.rowIndex="8"/>
                            <Button text="Set" GridPane.columnIndex="2" GridPane.rowIndex="9"/>
                        </GridPane>
                    </VBox>
                </TitledPane>
                <TitledPane animated="false" text="Capture">
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" value="Full"/>
                    </GridPane>
                </TitledPane>
                <TitledPane animated="false" expanded="false" text="Export">
                    <AnchorPane id="Content" minHeight="0.0" prefHeight="200.0"/>
                </TitledPane>
                <TitledPane animated="false" expanded="false" text="Render">
                    <AnchorPane id="Content" minHeight="0.0" prefHeight="200.0"/>
                </TitledPane>
            </VBox>
        </left>
        <bottom>
            <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
                <Label maxHeight="2.0" text="Left Status" HBox.hgrow="ALWAYS">
                    <font>
                        <Font fx:id="font" size="11.0"/>
                    </font>
                    <textFill>
                        <Color fx:id="color" blue="0.625" green="0.625" red="0.625"/>
                    </textFill>
                </Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label font="$font" text="Right Status" textFill="$color" HBox.hgrow="NEVER"/>
                <padding>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                </padding>
            </HBox>
        </bottom>
    </BorderPane>
</Scene>