<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root"
      fx:controller="starwolf.Controller"
      xmlns:fx="http://javafx.com/fxml">
    <MenuBar fx:id="menuBar">
        <Menu text="File">
            <MenuItem text="Open" onAction="#menuActionOpen"/>
            <SeparatorMenuItem/>
            <MenuItem text="Quit" onAction="#quit"/>
        </Menu>
    </MenuBar>
    <HBox fx:id="mainSpace">
        <VBox fx:id="toolSpace">
            <Accordion>
                <panes>
                    <TitledPane text="Terminal">
                        <VBox>
                            <TextArea fx:id="termOut" />
                            <TextField fx:id="terminal" onAction="#terminalAction"/>
                        </VBox>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
        <ScrollPane>
            <Canvas fx:id="canvas"/>
        </ScrollPane>
    </HBox>
    <HBox fx:id="footerSpace">
        <Label fx:id="statusLeft" text="LeftStatus"/>
        <Label fx:id="statusRight" text="RightStatus"/>
    </HBox>
</VBox>